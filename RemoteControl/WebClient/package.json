    "autoprefixer": "^9.8.6",
    "postcss": "^7.0.35",
    "preact": "^10.3.2",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.0.1"
